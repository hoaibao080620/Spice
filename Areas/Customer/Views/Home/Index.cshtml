@model Spice.Models.ViewModels.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}
<style>
  
</style>
@if (Model.Coupons.Any()) {
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (var i = 0; i < Model.Coupons.Count(); i++) {
                if (i == 0) {
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                }
                else {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @for (var i = 0; i < Model.Coupons.Count(); i++) {
                var base64 = Convert.ToBase64String(Model.Coupons.ToList()[i].CouponImage);
                var imageSrc = "data:image/jpg;base64," + base64;
                if (i == 0) {
                    <div class="carousel-item active">
                        <img height="200px" class="d-block w-100" src="@imageSrc" alt="Alt slide">
                    </div>
                }
                else {
                    <div class="carousel-item">
                        <img height="200px" class="d-block w-100" src="@imageSrc" alt="Alt slide">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
<div class="backgroundWhiteBorder container">
    <ul id="menu-filters" class="d-flex justify-content-center">
        <li  class="btn btn-outline-success active" style="cursor: pointer;margin-right: 0.5rem" data-filter=".AllMenuItem">Show all</li>
        @foreach (var category in Model.Categories) {
            <li class="btn btn-outline-success" 
                style="cursor: pointer;margin-right: 0.5rem" 
                data-filter=".@category.Name.Replace(" ",String.Empty)">@category.Name</li>
        }
    </ul>
    @foreach (var category in Model.Categories) {
        <partial name="_MenuItemPartialView" model="Model.MenuItems
    .Where(m => m.Category.Name == category.Name )"/>
    }
    
</div>

@section Scripts {
    <script
        src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
    <script>
        (function ($) {
            $("#menu-filters li").click(function() {
                $("#menu-filters li").removeClass('active');
                $(this).addClass('active');
                let selectedFilter = $(this).data("filter");
                $('.AllMenuItem').fadeOut();
                setTimeout(function () {
                    $(selectedFilter).slideDown();
                },300);
                });
        })(jQuery);
    </script>
}

