@model ApplicationUser

@{
    ViewBag.Title = "Update User";
    Layout = "_Layout";
}

<div class="backgroundWhiteBorder row">
    <div class="col-8 align-items-center">
        <form method="post" asp-controller="User" asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id">
            <input type="hidden" asp-for="UserName" value="@Model.UserName">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Name" class="col-form-label">Name</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" placeholder="Enter new name" asp-for="Name">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label class="col-form-label">Image</label>
                </div>
                <div class="col-9">
                    <input type="file" name="files" class="form-control" placeholder="Choose new image">
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Email" class="col-form-label">Email</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" placeholder="Enter new name" asp-for="Email">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="PhoneNumber" class="col-form-label">Phone Number</label>
                </div>
                <div class="col-9">
                    <input type="text" class="form-control" placeholder="Enter new name" asp-for="PhoneNumber">
                </div>
            </div>
            <div style="margin: 0 auto; text-align: center">
                <button type="submit" class="btn btn-primary">Update</button>
                <a class="btn btn-info " asp-action="Index">Back to list</a>
            </div>
            
        </form>
    </div>
    <div class="col-3 offset-1">
        <img src="@Model.Image" alt="Alt Text" width="200px" height="200px">
    </div>

</div>