@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-area="Identity" asp-page="/Account/Register">Create User</a>
        </div>
    </div>

    <div>
        @if (Model.Count() > 0) {
            <table class="table table-striped">
                <tr>
                    <th>
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(m => m.PhoneNumber)
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model) {
                    <tr >
                        <td >@item.Name</td>
                        <td >@item.Email</td>
                        <td >@item.PhoneNumber</td>
                        <td class="text-right">
                            @if (item.LockoutEnd is null || item.LockoutEnd < DateTime.Now) {
                                <a asp-action="Lock" asp-route-id="@item.Id" class="btn btn-info"><i class="fas fa-lock-open"></i></a>
                            }
                            else {
                                <a asp-action="Unlock" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-lock"></i></a>
                            }
                        </td>
                    </tr>
                }
            </table>
        }
        else {
            <p>User list is empty</p>
        }
    </div>
</div>