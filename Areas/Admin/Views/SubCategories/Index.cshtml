@model IEnumerable<SubCategory>
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="border backgroundWhiteBorder">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Sub Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-action="Create">Create Sub Category</a>
        </div>
    </div>

    <div>
        @if (Model.Count() > 0) {
        <table class="table table-striped">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Category Name
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.SubCategoryName</td>
                    <td>@item.Category.Name</td>
                    <td class="text-right">
                        <partial name="_GroupButtonPartial" model=@item.Id />
                    </td>
                </tr>

             }
        </table>
        }
        else {
        <p>Sub Category list is empty</p>
        }
    </div>
</div>