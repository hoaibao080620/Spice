@model SubCategory
@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-info">Do you really want to delete ?</h1>
<form method="post" asp-action="Delete" class="backgroundWhiteBorder">
    <div class="form-group row">
        <div class="col-2">
            <label class="col-form-label">Category name</label>
        </div>
        <div class="col-7 offset-1">
            <input type="text" readonly class="form-control" asp-for="Category.Name">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label class="col-form-label">Sub category name</label>
        </div>
        <div class="col-7 offset-1">
            <input type="text" readonly class="form-control" asp-for="SubCategoryName">
        </div>
    </div>
    <input class="btn btn-danger" type="submit" value="Yes" />
    <a class="btn btn-info" asp-action="Index">Back to list</a>
</form>
