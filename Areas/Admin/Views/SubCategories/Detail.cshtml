@model SubCategory
@{
    ViewData["Title"] = "Detail";
}

<h1>Detail</h1>

<div class="backgroundWhiteBorder">
    <div class="form-group row">
        <div class="col-2">
            <label class="col-form-label">Category name</label>
        </div>
        <div class="col-7 offset-1">
            <input type="text" readonly class="form-control" asp-for="Category.Name">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label class="col-form-label">Sub category name</label>
        </div>
        <div class="col-7 offset-1">
            <input type="text" class="form-control" asp-for="SubCategoryName">
        </div>
    </div>
    <div style="margin:0 auto; text-align: center; padding-top : .5rem">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id=@Model.Id>Edit</a>
        <a class="btn btn-info" asp-action="Index">Back to list</a>
    </div>
    
</div>

