@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "_Admin";
}
@section Navbar {
    <partial name="_NavbarPartialView" model=@("Categories") />
}
<style>
    td {
        font-size: 1.5rem;
    }
            
</style>
<br />

    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-info" asp-action="Create">Create Category</a>
        </div>
    </div>

    <div>
        @if (Model.Count() > 0) {
            <table class="table">
                <thead class="thead-dark" >
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                
                <th >
                    
                </th>
                </thead>
                @foreach (var item in Model) {
                    <tr>
                        <td >@item.Name</td>
                        <td class="text-right">
                            <partial name="_GroupButtonPartial" model="@item.Id"/>
                        </td>
                    </tr>

                }
            </table>
        }
        else {
            <p>Category list is empty</p>
        }
    
</div>

