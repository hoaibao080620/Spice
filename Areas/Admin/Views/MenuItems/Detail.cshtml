@model Spice.Models.MenuItem;
@{
    ViewData["Title"] = "Detail";
    Layout = "_Admin";
}
@section Navbar {
    <partial name="_NavbarPartialView" model=@("MenuItems") />
}

<div class="backgroundWhiteBorder row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label">Item Name</label>
            </div>
            <div class="col-7 offset-1">
                <input readonly type="text" class="form-control" asp-for="ItemName">
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label">Description</label>
            </div>
            <div class="col-7 offset-1">
                <textarea readonly asp-for="description" class="form-control"></textarea>
            </div>
            
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label class="col-form-label">Price</label>
            </div>
            <div class="col-7 offset-1">
                <input readonly type="number" class="form-control" asp-for="Price" required>
            </div>
        </div>

        

        <div class="form-group row">
            <div class="col-3">
                <label class="col-form-label">Category Name</label>
            </div>
            <div class="col-7">
                <select disabled readonly class="custom-select">
                    <option selected>@Model.Category.Name</option>
                </select>
            </div>

        </div>

        <div class="form-group row">
            <div class="col-3">
                <label class="col-form-label">Sub Category Name</label>
            </div>
            <div class="col-7">
                <select disabled readonly class="custom-select">
                    <option selected>@Model.SubCategory.SubCategoryName</option>
                </select>
            </div>

        </div>


        <div class="form-group row">
            <div class="col-3">
                <label class="col-form-label">Spicy</label>
            </div>
            <div class="col-7">
                <select disabled asp-for="Spicyness" asp-items="Html.GetEnumSelectList<MenuItem.ESpice>()" class="form-control">
                    
                </select>
                
            </div>

        </div>
        <div style="margin:0 auto; text-align: center; padding-top : .5rem">
            <a class="btn btn-danger" asp-action="Edit" asp-route-id=@Model.Id>Edit</a>
            <a class="btn btn-info" asp-action="Index">Back to list</a>
        </div>
    </div>
    <div class="col-4">
            <img alt="" src="@Model.Image" width="100%"/>
        </div>
</div>



